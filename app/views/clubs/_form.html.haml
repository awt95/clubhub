= form_for @club do |f|
  - if @club.errors.any?
    #error_explanation
      %h2= "#{pluralize(@club.errors.count, "error")} prohibited this club from being saved:"
      %ul
        - @club.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :Name
    = f.text_field :Name
  .field
    = f.label :Description
    = f.text_area :Description
  .actions
    = f.submit 'Save'
