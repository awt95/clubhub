= form_for @club do |f|
  - if @club.errors.any?
    #error_explanation
      %h2= "#{pluralize(@club.errors.count, "error")} prohibited this club from being saved:"
      %ul
        - @club.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :clubid
    = f.number_field :clubid
  .field
    = f.label :clubname
    = f.text_field :clubname
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
